{
  "name": "taskflow",
  "version": "1.0.0",
  "description": "TaskFlow is a lightweight, \"no-build\" personal task management application. It features Kanban, Calendar, and Eisenhower Matrix views with robust local persistence.",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "serve": "serve . -l 3000",
    "test:unit": "playwright test e2e --grep @unit --project=chromium",
    "test:e2e": "playwright test e2e --grep-invert @unit",
    "test": "npm run test:unit && npm run test:e2e",
    "test:ci": "playwright test --project=chromium --reporter=line,html"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.2.3",
    "chai": "^6.2.2",
    "mocha": "^11.7.5",
    "serve": "^14.2.5"
  }
}
